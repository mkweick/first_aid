<div class="row">
  <div class="col-xs-12 text-center">
    <strong class="txt-lg">Manage Techs</strong>
    <hr/>
  </div>
</div>

<div class="row">
  <div class="text-center bottom-20">
    <%= link_to "New Tech", new_user_path, class: "btn btn-success btn-lg" %>
  </div>
</div>

<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
    <table width="100%" class="table table-condensed">
      <tr class="light-gray-1">
        <th width="40%">
          <% if @filter != 'first_name' %>
            <%= link_to 'Name', users_path(filter: 'name'),
                                class: "" %>
          <% elsif @filter == 'first_name' && @sort == 'asc' %>
            <%= link_to users_path(filter: 'name', sort: 'd'),
                                  class: "" do %>
              Name
              <span class="glyphicon glyphicon-sort-by-attributes"></span>
            <% end %>
          <% else %>
            <%= link_to users_path(filter: 'name'), class: "" do %>
              Name
              <span class="glyphicon glyphicon-sort-by-attributes-alt"></span>
            <% end %>
          <% end %>
        </th>
        <th width="20%" class="text-center">
          <% if @filter != 'whs_id' %>
            <%= link_to 'WHS', users_path(filter: 'whs'),
                                class: "" %>
          <% elsif @filter == 'whs_id' && @sort == 'asc' %>
            <%= link_to users_path(filter: 'whs', sort: 'd'),
                                  class: "" do %>
              WHS
              <span class="glyphicon glyphicon-sort-by-attributes"></span>
            <% end %>
          <% else %>
            <%= link_to users_path(filter: 'whs'), class: "" do %>
              WHS
              <span class="glyphicon glyphicon-sort-by-attributes-alt"></span>
            <% end %>
          <% end %>
        </th>
        <th width="25%" class="text-center">
          <% if @filter != 'active' %>
            <%= link_to 'Active', users_path(filter: 'status', sort: 'd'),
                                class: "" %>
          <% elsif @filter == 'active' && @sort == 'asc' %>
            <%= link_to users_path(filter: 'status', sort: 'd'),
                                  class: "" do %>
              Active
              <span class="glyphicon glyphicon-sort-by-attributes"></span>
            <% end %>
          <% else %>
            <%= link_to users_path(filter: 'status'), class: "" do %>
              Active
              <span class="glyphicon glyphicon-sort-by-attributes-alt"></span>
            <% end %>
          <% end %>
        </th>
        <th width="15%"></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= "#{user.first_name} #{user.last_name}" %></td>
          <td class="text-center"><%= leading_zero(user.whs_id) %></td>
          <td class="text-center">
            <% if user.active %>
              <span class="glyphicon glyphicon-ok"></span>
            <% end %>
          </td>
          <td class="text-center">
            <%= link_to "Edit", edit_user_path(user.id),
              class: "btn btn-primary btn-xs"%>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
