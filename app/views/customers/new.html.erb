<% show = params[:show] %>

<div class="row">
  <div class="text-center top-10">
    <%= form_tag new_customer_path, method: "get", class: "form-inline" do %>
      <div class="form-group col-xs-9 col-sm-5 col-sm-offset-3 col-md-5 col-md-offset-3">
        <%= text_field_tag :search, params[:search],
                                    placeholder: "Account # or Keyword",
                                    autofocus: :autofocus,
                                    type: :search,
                                    class: "form-control cust-search" %>
      </div>
      <%= hidden_field_tag :show, value = 1 %>
      <div class="col-xs-1 col-sm-1 col-md-1">
        <%= submit_tag "Search", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3 top-20">
    <div class="list-group">
      <% if @cust_results.nil? %>
        <%= "<h4 class='text-center'>NO MATCHES FOUND</h4>".html_safe if show %>
      <% else %>
        <% @cust_results.each do |cr| %>
          <%= link_to "#{cr[1]}<span class='pull-right'>#{cr[0]}</span>".html_safe,
                      customers_path(cust_num: cr[0], cust_name: cr[1],
                                     cust_line1: cr[2], cust_line2: cr[3],
                                     cust_city: cr[4], cust_state: cr[5],
                                     cust_zip: cr[6]),
                                     method: 'post',
                                     class: "list-group-item text-left" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
