<div class="col-xs-12 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 text-center">
  <strong><%= @customer.cust_name %> (<%= @customer.cust_num %>)</strong>
  <hr/>
  <%= form_tag send_email_customer_path,  class: "form-horizontal",
                                          method: 'post' do %>
    <div class="form-group">
      <%= label_tag :email, "Email:",
                            class: "col-xs-2 col-sm-3 col-md-3 control-label" %>
      <div class="col-xs-10 col-sm-7 col-md-7">
        <%= text_field_tag :email, nil, autofocus: :autofocus,
                                        class: "form-control" %>
      </div>
    </div>
    <%= submit_tag "Send Email", class: "btn btn-primary right-20" %>
    <%= link_to "Cancel", customer_items_path(@customer.id),
                          class: "btn btn-danger" %>
  <% end %>
</div>
