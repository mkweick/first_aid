<div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 text-center">
  <%= form_tag "/login", class: "form-horizontal", method: 'post' do %>

    <div class="form-group">
      <%= label_tag :username, nil, class: "col-xs-3 col-sm-3 col-md-3 control-label" %>
      <div class="col-xs-9 col-sm-9 col-md-9">
        <%= text_field_tag :username, nil, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :password, nil, class: "col-xs-3 col-sm-3 col-md-3 control-label" %>
      <div class="col-xs-9 col-sm-9 col-md-9">
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>
    </div>

    <%= submit_tag "Log in", class: "btn btn-primary" %>
  <% end %>
</div>
